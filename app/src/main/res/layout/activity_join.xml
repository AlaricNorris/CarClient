<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <include layout="@layout/view_toolbar_center"></include>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            android:paddingLeft="30dip"
            android:background="#f8f8f8"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="商家信息"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#8e8e8e"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_height="40dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:paddingLeft="30dip"
                android:text="输入修理厂名称"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/join_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请填写"
                android:textSize="14sp"
                android:paddingRight="20dip"
                android:textColor="@android:color/black"
                android:gravity="right|center"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#8e8e8e"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_height="40dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:paddingLeft="30dip"
                android:text="选择所属区域"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/join_area"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:paddingRight="20dip"
                android:textColor="@android:color/black"
                android:gravity="right|center"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dip"
                android:src="@mipmap/ic_arr_right_black"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#8e8e8e"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_height="40dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:paddingLeft="30dip"
                android:text="输入常用联系人"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/join_contact"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请填写"
                android:textSize="14sp"
                android:paddingRight="20dip"
                android:textColor="@android:color/black"
                android:gravity="right|center"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#8e8e8e"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_height="40dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:paddingLeft="30dip"
                android:text="输入详细地址"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/join_address"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请填写"
                android:textSize="14sp"
                android:paddingRight="20dip"
                android:textColor="@android:color/black"
                android:gravity="right|center"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#8e8e8e"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_height="40dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:paddingLeft="30dip"
                android:text="输入手机号"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/join_tel"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请填写"
                android:inputType="number"
                android:textSize="14sp"
                android:paddingRight="20dip"
                android:textColor="@android:color/black"
                android:gravity="right|center"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#8e8e8e"></View>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:background="#f8f8f8"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/join_check"
            android:checked="true"
            android:layout_margin="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我同意“快准车服服务协议”"/>
        <TextView
            android:id="@+id/join_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#acacac"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:padding="10dip"
            android:text="提交"/>
    </LinearLayout>
</LinearLayout>