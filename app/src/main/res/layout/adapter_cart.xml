<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip">
    <CheckBox
        android:id="@+id/cart_checkbox"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_toRightOf="@id/cart_checkbox"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/cart_image"
            android:layout_width="93dip"
            android:layout_height="62dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:id="@+id/cart_price_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#949494"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="3dip"
                    android:text="指导价："/>
                <TextView
                    android:id="@+id/cart_normalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="3dip"
                    android:text="100"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:textColor="#949494"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="3dip"
                    android:text="成交价："/>
                <TextView
                    android:id="@+id/cart_finalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="3dip"
                    android:text="100"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cart_goods_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="3dip"
            android:layout_toRightOf="@id/cart_image"
            android:layout_toLeftOf="@id/cart_price_layout"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cart_title"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:text="123123123123123123123"
                android:maxWidth="130dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cart_num"
                android:singleLine="true"
                android:text="x1"
                android:layout_marginTop="3dip"
                android:textColor="#747474"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/cart_productnum_layout"
            android:layout_toRightOf="@id/cart_image"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/view_price"></include>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="#747474"
        android:layout_width="match_parent"
        android:layout_height="0.5dip">

    </View>
</RelativeLayout>