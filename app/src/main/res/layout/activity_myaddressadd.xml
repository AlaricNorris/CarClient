<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_toolbar_normal"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="所在地区："/>
        <TextView
            android:id="@+id/addcustomer_area"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="详细地址："/>
        <EditText
            android:id="@+id/addcustomer_address"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="手机号码："/>
        <EditText
            android:id="@+id/addcustomer_phonenum"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:inputType="number"
            android:maxLength="11"
            android:background="@drawable/rectangle_corner_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="16sp"
            android:text="联系人："/>
        <EditText
            android:id="@+id/addcustomer_contact"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:textSize="13sp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/rectangle_corner_black"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="保存"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"/>
</LinearLayout>