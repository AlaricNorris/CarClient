<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip">
    <CheckBox
        android:id="@+id/cart_content_checkbox"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/cart_content_image"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/cart_content_checkbox"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip"
        android:layout_width="55dip"
        android:layout_height="55dip" />
    <RelativeLayout
        android:id="@+id/cart_content_finishlayout"
        android:visibility="gone"
        android:layout_toRightOf="@id/cart_content_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/cart_content_money_layout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_width="50dip"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cart_content_price"
                android:text="$10.10"
                android:textColor="#1d2221"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cart_content_num"
                android:text="x1"
                android:textColor="#1d2221"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_toLeftOf="@id/cart_content_money_layout"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="123123"
                android:textColor="#1d2221"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="123123"
                android:textColor="#a3a3a3"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cart_content_editlayout"
        android:layout_toRightOf="@id/cart_content_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/cart_content_delete"
            android:text="删除"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@drawable/drawable_delete"
            android:layout_width="41dip"
            android:layout_height="41dip" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cart_content_productnum_delete"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/drawable_square"
                    android:text="-"/>
                <EditText
                    android:id="@+id/cart_content_productnum"
                    android:layout_width="50dip"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:textColor="#232829"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:background="@drawable/drawable_square"
                    android:layout_marginLeft="-2dip"
                    android:text="1"/>
                <TextView
                    android:id="@+id/cart_content_productnum_add"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/drawable_square"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="-2dip"
                    android:text="+"/>
            </LinearLayout>
            <TextView
                android:id="@+id/cart_content_choice"
                android:text="1231jhjhj231231jhjhj23"
                android:maxWidth="200dip"
                android:singleLine="true"
                android:gravity="center"
                android:drawableRight="@mipmap/ic_arr_down_black"
                android:textSize="12sp"
                android:textColor="#a3a3a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#ececec"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dip">

    </View>
</RelativeLayout>