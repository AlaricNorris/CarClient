<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_toolbar_center"></include>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_cart_null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#252525"
                android:layout_marginTop="15dip"
                android:text="购物车还是空的"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快去购物吧>>>"
                android:layout_marginTop="10dip"
                android:textColor="@android:color/white"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:background="@mipmap/ic_cart_go"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/cart_content_rv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee">
        <CheckBox
            android:id="@+id/cart_choice_all"
            android:text="全选"
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/cart_collection"
                android:text="移到收藏夹"
                android:textColor="@android:color/black"
                android:background="@drawable/rectangle_corner_lightgray"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:padding="5dip"
                android:layout_width="82dip"
                android:layout_height="40dip" />
            <Button
                android:id="@+id/cart_cal"
                android:text="立即购买"
                android:textColor="@android:color/white"
                android:background="@drawable/drawable_delete"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:padding="5dip"
                android:layout_width="82dip"
                android:layout_height="40dip" />
        </LinearLayout>
        <TextView
            android:id="@+id/cart_allmoney"
            android:text="合计：0元"
            android:layout_marginLeft="23dip"
            android:layout_marginTop="3dip"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_choice_all"/>
    </RelativeLayout>
</LinearLayout>