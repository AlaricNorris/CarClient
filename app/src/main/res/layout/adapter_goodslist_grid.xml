<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/adapter_goodslist_grid_layout">
    <ImageView
        android:id="@+id/adapter_goodslist_grid_image"
        android:layout_width="100dip"
        android:layout_height="90dip"
        android:layout_margin="15dip"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/adapter_goodslist_grid_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2c2c2c"
        android:textSize="17sp"
        android:singleLine="true"
        android:text="title"/>
    <RelativeLayout
        android:layout_toRightOf="@id/adapter_goodslist_grid_image"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adapter_goodslist_grid_discountdesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b6403b"
            android:layout_marginTop="2dip"
            android:text="title"/>
        <TextView
            android:id="@+id/adapter_goodslist_grid_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#5f5f5f"
            android:layout_marginTop="2dip"
            android:text="title"/>
    </RelativeLayout>
</LinearLayout>