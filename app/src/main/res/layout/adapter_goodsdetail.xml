<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip">
    <ImageView
        android:id="@+id/goods_detail_image"
        android:layout_width="100dip"
        android:layout_height="90dip"
        android:layout_margin="15dip"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_toRightOf="@id/goods_detail_image"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/goods_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2c2c2c"
            android:textSize="17sp"
            android:text="title"/>
        <TextView
            android:id="@+id/goods_detail_code"
            android:layout_below="@id/goods_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2c2c2c"
            android:textSize="15sp"
            android:layout_marginTop="2dip"
            android:text="title"/>
        <TextView
            android:id="@+id/goods_detail_discountdesp"
            android:layout_below="@id/goods_detail_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#b6403b"
            android:layout_marginTop="2dip"
            android:text="title"/>
        <TextView
            android:id="@+id/goods_detail_price"
            android:layout_below="@id/goods_detail_discountdesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5f5f5f"
            android:layout_marginTop="2dip"
            android:text="title"/>
        <TextView
            android:id="@+id/goods_detail_salenum"
            android:layout_alignParentRight="true"
            android:layout_below="@id/goods_detail_discountdesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:layout_marginRight="5dip"
            android:text="title"/>
    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#e7e7e7">

    </View>
</RelativeLayout>