<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:id="@+id/adapter_goodslist_linear_layout">
    <ImageView
        android:id="@+id/adapter_goodslist_linear_image"
        android:layout_width="100dip"
        android:layout_height="90dip"
        android:layout_margin="15dip"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_toRightOf="@id/adapter_goodslist_linear_image"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adapter_goodslist_linear_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2c2c2c"
            android:textSize="17sp"
            android:maxLines="2"
            android:text="title"/>
        <TextView
            android:id="@+id/adapter_goodslist_linear_discountdesp"
            android:layout_below="@id/adapter_goodslist_linear_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#b6403b"
            android:layout_marginTop="2dip"
            android:text="title"/>
        <TextView
            android:id="@+id/adapter_goodslist_linear_price"
            android:layout_below="@id/adapter_goodslist_linear_discountdesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5f5f5f"
            android:layout_marginTop="2dip"
            android:text="title"/>
    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#e7e7e7">

    </View>
</RelativeLayout>