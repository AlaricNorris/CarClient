<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/view_toolbar_center"></include>
        <com.renyu.carclient.myview.ProductDetailView
            android:id="@id/goodsdetailview"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.renyu.carclient.myview.ProductDetailTopView
                android:id="@id/topview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/goodsdetil_vp"
                        android:layout_width="match_parent"
                        android:layout_height="200dip" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/goodsdetil_title"
                            android:text="asdasdasd"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="100.0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <Button
                                android:id="@+id/goodsdetil_isLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="登录即享受优惠"
                                android:background="@android:color/holo_red_dark"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/goodsdetil_fav"
                                android:src="@mipmap/ic_launcher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收藏"/>
                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购买数量"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <include layout="@layout/view_price"></include>
                            <TextView
                                android:id="@+id/goodsdetil_store"
                                android:text="1231jhjhj231231jhjhj23"
                                android:maxWidth="200dip"
                                android:singleLine="true"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textColor="#a3a3a3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/goodsdetail_service"
                        android:layout_marginTop="10dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/ic_launcher"
                            android:text="快速配送"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/ic_launcher"
                            android:text="精准交付"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/ic_launcher"
                            android:text="免运费"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dip"
                        android:id="@+id/goodsdetail_params"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:text="产品参数"/>
                    <TextView
                        android:id="@+id/goodsdetail_cartype"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:text="适配车型"/>
                    <TextView
                        android:id="@+id/goodsdetail_paytype"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:text="付款方式"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dip"
                        android:gravity="center"
                        android:text="继续滑动，查看图文详情"/>
                </LinearLayout>
            </com.renyu.carclient.myview.ProductDetailTopView>
            <com.renyu.carclient.myview.ProductDetailBottomView
                android:id="@id/bottomview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.renyu.carclient.myview.ProductDetailBottomView>
        </com.renyu.carclient.myview.ProductDetailView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <TextView
                android:id="@+id/goodsdetail_addcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入购物车" />
            <TextView
                android:id="@+id/goodsdetail_paynow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即购买"
                android:padding="10dip"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/goodsdetail_tip_bglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#70000000">
        <LinearLayout
            android:id="@+id/goodsdetail_tip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical">

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
