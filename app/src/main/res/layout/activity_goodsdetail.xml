<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/view_toolbar_center"></include>
        <com.renyu.carclient.myview.ProductDetailView
            android:id="@id/goodsdetailview"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.renyu.carclient.myview.ProductDetailTopView
                android:id="@id/topview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/goodsdetil_vp"
                        android:layout_width="match_parent"
                        android:layout_height="250dip" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#b6b6b6"
                        android:layout_width="match_parent"
                        android:layout_height="40dip">
                        <TextView
                            android:id="@+id/goodsdetil_title"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_width="0.5dip"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"/>
                        <ImageView
                            android:layout_width="62dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_share"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:paddingRight="15dip"
                        android:paddingLeft="15dip"
                        android:background="#eeeeee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="10dip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/goodsdetil_price"
                                android:textColor="#828282"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/goodsdetil_realprice"
                                android:textColor="#828282"
                                android:layout_marginTop="8dip"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <Button
                                android:id="@+id/goodsdetil_isLogin"
                                android:layout_width="130dip"
                                android:layout_height="30dip"
                                android:layout_marginTop="8dip"
                                android:textSize="13sp"
                                android:text="登录即享受优惠"
                                android:background="@android:color/holo_red_dark"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginTop="5dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/goodsdetil_fav"
                                android:src="@mipmap/ic_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:layout_marginTop="3dip"
                                android:text="收藏"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="#eeeeee"
                        android:padding="15dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购买数量"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <include layout="@layout/view_price"></include>
                            <TextView
                                android:id="@+id/goodsdetil_store"
                                android:layout_marginTop="5dip"
                                android:maxWidth="200dip"
                                android:singleLine="true"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#acacac"></View>
                    <LinearLayout
                        android:id="@+id/goodsdetail_service"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:background="#f8f8f8"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/ic_kuai"
                            android:paddingLeft="10dip"
                            android:text="快速配送"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/ic_zhun"
                            android:paddingLeft="10dip"
                            android:text="精准交付"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/ic_mian"
                            android:paddingLeft="10dip"
                            android:text="免运费"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:src="@mipmap/ic_more"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#acacac"></View>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="22dip"
                        android:background="#eeeeee"></View>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#acacac"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/goodsdetail_params"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="16dip"
                            android:text="产品参数"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:src="@mipmap/ic_arr_right_black"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#acacac"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/goodsdetail_cartype"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="16dip"
                            android:text="适配车型"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:src="@mipmap/ic_arr_right_black"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#acacac"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/goodsdetail_paytype"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dip"
                            android:layout_weight="1"
                            android:text="付款方式"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:src="@mipmap/ic_arr_right_black"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#acacac"></View>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="#eeeeee"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#eeeeee"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="继续滑动，查看图文详情"
                            android:textColor="@android:color/black"
                            android:gravity="center"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:src="@mipmap/ic_goods_down"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dip"
                        android:background="#eeeeee"></View>
                </LinearLayout>
            </com.renyu.carclient.myview.ProductDetailTopView>
            <com.renyu.carclient.myview.ProductDetailBottomView
                android:id="@id/bottomview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.renyu.carclient.myview.ProductDetailBottomView>
        </com.renyu.carclient.myview.ProductDetailView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:background="#b6b6b6"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <TextView
                android:id="@+id/goodsdetail_addcart"
                android:layout_width="142dip"
                android:layout_height="40dip"
                android:drawableLeft="@mipmap/ic_cart_gray"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="26dip"
                android:text="加入购物车" />
            <TextView
                android:id="@+id/goodsdetail_paynow"
                android:layout_width="142dip"
                android:layout_height="40dip"
                android:text="立即购买"
                android:textColor="@android:color/white"
                android:drawableLeft="@mipmap/ic_paynow"
                android:background="@android:color/holo_red_dark"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="26dip"
                android:padding="10dip"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/goodsdetail_tip_bglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#70000000">
        <LinearLayout
            android:id="@+id/goodsdetail_tip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical">

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
